                        <Button Content="⯅" Command="{Binding DurationOptimizationTestsYearsIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding DurationOptimizationTestsYearsDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="лет" Margin="1 0 0 0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding DurationOptimizationMonths, Mode=TwoWay}" Margin="5 0 0 0" Width="25" Height="18"/>
                    <StackPanel Orientation="Vertical" Height="28">
                        <Button Content="⯅" Command="{Binding DurationOptimizationTestsMonthsIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding DurationOptimizationTestsMonthsDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="месяцев" Margin="1 0 0 0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding DurationOptimizationDays, Mode=TwoWay}" Margin="5 0 0 0" Width="30" Height="18"/>
                    <StackPanel Orientation="Vertical" Height="28">
                        <Button Content="⯅" Command="{Binding DurationOptimizationTestsDaysIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding DurationOptimizationTestsDaysDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="дней" Margin="1 0 0 0" VerticalAlignment="Center"/>
