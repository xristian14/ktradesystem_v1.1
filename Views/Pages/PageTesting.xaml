                    <TextBox Text="{Binding OptimizationSpacingYears, Mode=TwoWay}" Margin="133 0 0 0" Width="25" Height="18"/>
                    <StackPanel Orientation="Vertical" Height="28">
                        <Button Content="⯅" Command="{Binding SpacingOptimizationTestsYearsIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding SpacingOptimizationTestsYearsDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="лет" Margin="1 0 0 0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding OptimizationSpacingMonths, Mode=TwoWay}" Margin="5 0 0 0" Width="25" Height="18"/>
                    <StackPanel Orientation="Vertical" Height="28">
                        <Button Content="⯅" Command="{Binding SpacingOptimizationTestsMonthsIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding SpacingOptimizationTestsMonthsDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="месяцев" Margin="1 0 0 0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding OptimizationSpacingDays, Mode=TwoWay}" Margin="5 0 0 0" Width="30" Height="18"/>
                    <StackPanel Orientation="Vertical" Height="28">
                        <Button Content="⯅" Command="{Binding SpacingOptimizationTestsDaysIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding SpacingOptimizationTestsDaysDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="дней" Margin="1 0 0 0" VerticalAlignment="Center"/>
                </StackPanel>
