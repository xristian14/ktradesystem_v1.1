                <StackPanel Orientation="Horizontal" Margin="0 2 0 0" IsEnabled="{Binding IsForwardTesting}">
                    <TextBox Text="{Binding DurationForwardYears, Mode=TwoWay}" Margin="133 0 0 0" Width="25" Height="18"/>
                    <StackPanel Orientation="Vertical" Height="28">
                        <Button Content="⯅" Command="{Binding DurationForwardTestYearsIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding DurationForwardTestYearsDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="лет" Margin="1 0 0 0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding DurationForwardMonths, Mode=TwoWay}" Margin="5 0 0 0" Width="25" Height="18"/>
                    <StackPanel Orientation="Vertical" Height="28">
                        <Button Content="⯅" Command="{Binding DurationForwardTestMonthsIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding DurationForwardTestMonthsDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="месяцев" Margin="1 0 0 0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding DurationForwardDays, Mode=TwoWay}" Margin="5 0 0 0" Width="30" Height="18"/>
                    <StackPanel Orientation="Vertical" Height="28">
                        <Button Content="⯅" Command="{Binding DurationForwardTestDaysIncrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                        <Button Content="⯆" Command="{Binding DurationForwardTestDaysDecrement_Click}" Height="14" Width="15" Padding="0 -2"/>
                    </StackPanel>
                    <TextBlock Text="дней" Margin="1 0 0 0" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="Запустить тестирование" Command="{Binding LaunchTesting_Click}" ToolTipService.ShowOnDisabled="True" ToolTipService.ShowDuration="600000"  Width="156" Height="32" Margin="0 14 0 0" HorizontalAlignment="Right">
                    <Button.ToolTip>
                        <ToolTip>
                            <ListView ItemsSource="{Binding TooltipLaunchTesting}" IsEnabled="False"/>
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
