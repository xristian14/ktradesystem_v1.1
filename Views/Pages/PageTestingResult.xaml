<Page x:Class="ktradesystem.Views.Pages.PageTestingResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ktradesystem.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageTestingResult" Background="White">

    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal" Margin="10 0 0 0">
                <TextBlock Text="Результат тестирования:" Width="144"/>
                <ComboBox MaxWidth="350"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10 10 0 0">
                <TextBlock Text="Источники данных:" Width="115"/>
                <ComboBox MaxWidth="300"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="32 3 0 0">
                <TextBlock Text="Тестовая связка:" Width="115"/>
                <ComboBox/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="54 3 0 0">
                <TextBlock Text="Тестовый прогон:" Width="115"/>
                <ComboBox/>
            </StackPanel>
            <TabControl Margin="0 3 0 0">
                <TabItem>
                    <TabItem.Header>Таблицы</TabItem.Header>
                    <TabItem.Content>
                        <StackPanel Orientation="Vertical">
                            <Button Content="Button test" Command="{Binding ButtonTest_Click}" Width="100"/>
                            <TextBlock Text="{Binding TestText}"/>
                        </StackPanel>
                    </TabItem.Content>
                </TabItem>
                <TabItem>
                    <TabItem.Header>Графики</TabItem.Header>
                    <TabItem.Content>
                        <StackPanel Orientation="Vertical"></StackPanel>
                    </TabItem.Content>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</Page>
